{erl_opts, [
  {parse_transform, lager_transform},
  warn_export_all,
  debug_info
]}.

{edoc_opts, [{preprocess, true}]}.
{plugins, [rebar_ct]}.

{clean_files, [
    "erl_crash.dump",
    "ebin/*.beam",
    "log/*",
    "logs/*"
]}.

{deps_dir, ["deps"]}.
{deps, [
  {lager,       ".*",   {git, "git://github.com/basho/lager.git",
                          {tag, "2.0.3"}}}
]}.
